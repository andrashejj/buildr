model Project {
    id        String      @id @default(uuid())
    summary   String
    startDate DateTime
    endDate   DateTime?
    endDateType EndDateType?

    budgetMin Float?
    budgetMax Float? 
    
    size      ProjectSize?
    type      ProjectType
    userId    String
    user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)

    rooms     Room[]
    offers    Offer[]
    media     Media[]
    messages  Message[]

    createdAt DateTime    @default(now())
    updatedAt DateTime    @updatedAt

    @@map("projects")
}

